<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#626465"
    tools:context="${packageName}.${activityClass}" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/choose_a_band"
        android:gravity="center"
        android:orientation="horizontal" >

        <!-- TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:text="@string/hello_world"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" /-->
    </LinearLayout>
    
     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_above="@+id/propaganda"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/LinearLayout1" >
    
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="30dp" >

        <LinearLayout
            style="@style/style_layout" >

            <LinearLayout
                style="@style/style_botoes"
                android:background="@drawable/seletor_the_beatles"
                 >

                <TextView
                    android:id="@+id/textView2"
                    style="@style/style_text"
                    android:text="The Beatles"
                     />

            </LinearLayout>

            <LinearLayout
                style="@style/style_botoes"
                android:layout_marginLeft="35dp"
                android:background="@drawable/seletor_bt_acdc"
                >
            
            <TextView
                android:id="@+id/textView3"
                style="@style/style_text"
                android:text="ACDC"
                />    
                 
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/style_layout"
            android:layout_marginTop="30dp" >

            <LinearLayout
                style="@style/style_botoes"
                android:background="@drawable/seletor_bt_rolling_stone"
                 >
            
                
            <TextView
                android:id="@+id/textView4"
                style="@style/style_text"
                android:text="Rolling Stone"
                 />
                               
            </LinearLayout>

            <LinearLayout
                style="@style/style_botoes"
                android:layout_marginLeft="35dp"
                android:background="@drawable/seletor_bt_led_zeppelin"
                 >
           
                
                <TextView
                android:id="@+id/textView5"
                style="@style/style_text"
                android:text="Led Zeppelin"
                 />
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            style="@style/style_layout"
            android:layout_marginTop="30dp">

            <LinearLayout
                style="@style/style_botoes"
                android:background="@drawable/seletor_bt_eagles"
                 >
            
            <TextView
                android:id="@+id/textView6"
                style="@style/style_text"
                android:text="Eagles"
                />
                
            </LinearLayout>

            <LinearLayout
                style="@style/style_botoes"
                android:layout_marginLeft="35dp"
                android:background="@drawable/seletor_bt_the_who"
                >
            <TextView
                android:id="@+id/textView7"
                style="@style/style_text"
                android:text="The Who"
                 />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    </ScrollView>

     <FrameLayout
         android:id="@+id/propaganda"
         android:layout_width="fill_parent"
         android:layout_height="50dp"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:layout_alignParentRight="true"
         android:background="#f5853f" >

     </FrameLayout>

</RelativeLayout>
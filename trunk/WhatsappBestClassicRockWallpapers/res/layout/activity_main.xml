<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#626465"
    tools:context="${packageName}.${activityClass}" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/choose_a_band"
        android:gravity="center"
        android:orientation="horizontal" >

        <!-- TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:text="@string/hello_world"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" /-->
    </LinearLayout>
    
     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_above="@+id/propaganda"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/LinearLayout1"
         android:background="#6f6f6f" >
    
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="30dp" >

        <LinearLayout
            style="@style/style_layout" >

            <Button
                android:id="@+id/bt_the_beatles"
                android:text="The Beatles"
                style="@style/style_botoes"
                android:background="@drawable/seletor_the_beatles"
                
                 />

            <Button
                android:id="@+id/bt_acdc"
                android:text="ACDC"
                style="@style/style_botoes"
                android:layout_marginLeft="35dp"
                android:background="@drawable/seletor_bt_acdc"
                />
                        
        </LinearLayout>

        <LinearLayout
            style="@style/style_layout"
            android:layout_marginTop="30dp" >

            <Button
                android:id="@+id/bt_rolling_stone"
                android:text="Rolling Stone"
                style="@style/style_botoes"
                android:background="@drawable/seletor_bt_rolling_stone"
                 />
            <Button
                android:id="@+id/bt_the_led_zeppelin"
                android:text="Led Zeppelin"
                style="@style/style_botoes"
                android:layout_marginLeft="35dp"
                android:background="@drawable/seletor_bt_led_zeppelin"
                 />
        </LinearLayout>
        
        <LinearLayout
            style="@style/style_layout"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/bt_eagles"
                android:text="Eagles"
                style="@style/style_botoes"
                android:background="@drawable/seletor_bt_eagles"
                 />

            <Button
                android:id="@+id/bt_the_who"
                android:text="The Who"
                style="@style/style_botoes"
                android:layout_marginLeft="35dp"
                android:background="@drawable/seletor_bt_the_who"
                />
        </LinearLayout>
            
        <LinearLayout
            style="@style/style_layout"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/bt_kiss"
                android:text="Kiss"
                style="@style/style_botoes"
                android:background="@drawable/seletor_bt_kiss"
                 />

            <Button
                android:id="@+id/bt_the_doors"
                android:text="The Doors"
                style="@style/style_botoes"
                android:layout_marginLeft="35dp"
                android:background="@drawable/seletor_bt_the_doors"
                />
        </LinearLayout>
        
        
        <LinearLayout
            style="@style/style_layout"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/bt_aerosmith"
                android:text="AeroSmith"
                style="@style/style_botoes"
                android:background="@drawable/seletor_bt_aerosmith"
                 />

            <Button
                android:id="@+id/bt_van_halen"
                android:text="Van Halen"
                style="@style/style_botoes"
                android:layout_marginLeft="35dp"
                android:background="@drawable/seletor_bt_van_halen"
                />
        </LinearLayout>
        
        
        </LinearLayout>
    
    
    </ScrollView>

     <FrameLayout
         android:id="@+id/propaganda"
         android:layout_width="fill_parent"
         android:layout_height="50dp"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:layout_alignParentRight="true"
         android:background="#f5853f" >

     </FrameLayout>

</RelativeLayout>
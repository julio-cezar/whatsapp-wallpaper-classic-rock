<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#626465"
    tools:context="${packageName}.${activityClass}" >

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/choose_a_band"
        android:gravity="center"
        android:orientation="horizontal" >

      
    </LinearLayout>
    
     <ScrollView
         android:id="@+id/meuscroll1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentLeft="true"
         android:layout_below="@+id/LinearLayout1"
         android:background="#6f6f6f" >
    
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="30dp" >

        <LinearLayout
            style="@style/style_layout" >

            <Button
                android:id="@+id/bt_the_beatles"
                android:text="The Beatles"
                style="@style/style_botoes"
                android:background="@drawable/seletor_the_beatles"
                
                 />

            <Button
                android:id="@+id/bt_acdc"
                android:text="ACDC"
                style="@style/style_botoes"
                android:layout_marginLeft="35dp"
                android:background="@drawable/seletor_bt_acdc"
                />
                        
        </LinearLayout>

        <LinearLayout
            style="@style/style_layout"
            android:layout_marginTop="30dp" >

            <Button
                android:id="@+id/bt_rolling_stone"
                android:text="Rolling Stone"
                style="@style/style_botoes"
                android:background="@drawable/seletor_bt_rolling_stone"
                 />
            <Button
                android:id="@+id/bt_the_led_zeppelin"
                android:text="Led Zeppelin"
                style="@style/style_botoes"
                android:layout_marginLeft="35dp"
                android:background="@drawable/seletor_bt_led_zeppelin"
                 />
        </LinearLayout>
        
        <LinearLayout
            style="@style/style_layout"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/bt_eagles"
                android:text="Eagles"
                style="@style/style_botoes"
                android:background="@drawable/seletor_bt_eagles"
                 />

            <Button
                android:id="@+id/bt_the_who"
                android:text="The Who"
                style="@style/style_botoes"
                android:layout_marginLeft="35dp"
                android:background="@drawable/seletor_bt_the_who"
                />
        </LinearLayout>
            
       <LinearLayout
            style="@style/style_layout"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/bt_kiss"
                android:text="Kiss"
                style="@style/style_botoes"
                android:background="@drawable/seletor_bt_kiss"
                 />

              <Button
                android:id="@+id/bt_the_doors"
                android:text="The Doors"
                style="@style/style_botoes"
                android:layout_marginLeft="35dp"
                android:background="@drawable/seletor_bt_the_doors"
                /> 
        </LinearLayout>
        
            <LinearLayout
            style="@style/style_layout"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="100dp">

            <Button
                android:id="@+id/bt_aerosmith"
                android:text="AeroSmith"
                style="@style/style_botoes"
                android:background="@drawable/seletor_bt_aerosmith"
                 />

            <Button
                android:id="@+id/bt_van_halen"
                android:text="Van Halen"
                style="@style/style_botoes"
                android:layout_marginLeft="35dp"
                android:background="@drawable/seletor_bt_van_halen"
                />
        </LinearLayout>
        
        
        </LinearLayout>
    
    
    </ScrollView>
    
